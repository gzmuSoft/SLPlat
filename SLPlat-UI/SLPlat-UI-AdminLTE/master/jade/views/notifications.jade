    // START panel
    .panel.panel-default
      .panel-heading
        | Popovers
      .panel-body
        div(ng-controller='PopoverDemoCtrl')
            h4 Dynamic
            .form-group
              label Popup Text:
              input.form-control(type='text', ng-model='dynamicPopover')
            .form-group
