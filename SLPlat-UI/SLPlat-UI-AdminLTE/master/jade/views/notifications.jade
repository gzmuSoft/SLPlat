.panel.panel-default
  .panel-heading Toaster notifications for Angular
  .panel-body(ng-controller='ToasterDemoCtrl')

    toaster-container(toaster-options="{'position-class': 'toast-bottom-right', 'close-button':true}")
    .row
      .col-sm-6
        .form-group
          label Title
          input.form-control(type='text', placeholder='Enter a title...', ng-model='toaster.title')
        .form-group
          label Message
          textarea.form-control(placeholder='Enter a message', rows='5', ng-model='toaster.text')
      .col-sm-6
        .row
          .col-md-6
            // icon-classes: .toast-error,.toast-info,.toast-wait,.toast-success,.toast-warning
            label Toast Type
            .radio.c-radio
              label
                input(type='radio', name='toasts', ng-model='toaster.type', value='success')
                span.fa.fa-circle
                | Success
            .radio.c-radio
              label
                input(type='radio', name='toasts', ng-model='toaster.type', value='info')
                span.fa.fa-circle
                | Info
            .radio.c-radio
              label
                input(type='radio', name='toasts', ng-model='toaster.type', value='wait')
                span.fa.fa-circle
                | Wait
            .radio.c-radio
              label
                input(type='radio', name='toasts', ng-model='toaster.type', value='warning')
                span.fa.fa-circle
                | Warning
            .radio.c-radio
              label
                input(type='radio', name='toasts', ng-model='toaster.type', value='error')
                span.fa.fa-circle
                | Error
    button.btn.btn-info(ng-click='pop()') Show a Toaster

// START row
.row(ng-controller="NotifyDemoCtrl")
  .col-lg-6
    // START panel
    .panel.panel-default
      .panel-heading
        | Notify Alerts
      .panel-body
        p Create toggleable notifications that fade out automatically.
        .input-group
          input.form-control(type='text', ng-model="msg", ng-init="msg = 'Message ..'")
          span.input-group-btn
            button.btn.btn-default(type='button', notify="", data-message="msg") Notify!!

        p You can use HTML inside your notification message          
        p
          button.btn.btn-default(type="button", notify="", data-message="msgHtml") Message with Icon
    // END panel
  .col-lg-6
    // START panel
    .panel.panel-default
      .panel-heading
        | Notify with Status and Position
      .panel-body
        p
          select.form-control(ng-model="notifyOpts.status")
            option(value="info") Info
            option(value="danger") Danger
            option(value="warning") Warning
            option(value="success") Success
        p
          select.form-control(ng-model="notifyOpts.pos")
            option(value="bottom-center") Bottom Cener
            option(value="top-left") Top Left
            option(value="top-right") Top Right
            option(value="bottom-right") Bottom Right
        p
          button.btn.btn-default(type="button", notify="", data-message="notifyMsg" data-options="notifyOpts") Notify!!
    // END panel

.row
  .col-lg-6
