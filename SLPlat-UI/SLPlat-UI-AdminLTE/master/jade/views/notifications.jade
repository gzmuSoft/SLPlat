    // START panel
    .panel.panel-default(ng-controller='ProgressDemoCtrl')
      .panel-heading Progress Bar
        .btn-group.pull-right
          button.btn.btn-xs.btn-primary(type='button', ng-click='randomStacked()') Stacked
          button.btn.btn-xs.btn-primary(type='button', ng-click='random()') Randomize
      .panel-body
        h4 Static
        .row
          .col-sm-4
            progressbar(value='55')
          .col-sm-4
            progressbar.progress-striped(value='22', type='warning') 22%
          .col-sm-4
            progressbar.progress-striped.active(max='200', value='166', type='danger')
              i 166 / 200

        h4 Dynamic
        progressbar(max='max', value='dynamic')
          span.text-nowrap {{dynamic}} / {{max}}
        small
          em No animation
        progressbar(animate='false', value='dynamic', type='success')
          b {{dynamic}}%
        small
          em Object (changes type based on value)
        progressbar.progress-striped.active(value='dynamic', type='{{type}}')
          | {{type}}
          i(ng-show='showWarning') !!! Watch out !!!

        h4 Stacked
        progress
          bar(ng-repeat='bar in stacked track by $index', value='bar.value', type='{{bar.type}}')
            span(ng-hide='ng-hide', bar.value='bar.value')
